package com.foodapp.repository;

import java.time.LocalDate;
import java.util.List;

import org.springframework.co
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Modifying;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import jakarta.transaction.Transactional;
@Repository

public interface OrderRepository extends JpaRepository<Order, Integer> {

	@Query("SELECT SUM(o.totalAmount) FROM Order o")
	double getTotalSales();

	long countByStatus(String status);

	@Query("SELECT COUNT(o) FROM Order o WHERE DATE(o.orderDate) = :date")
	long countByDate(@Param("date") LocalDate date);

	
	@Query("SELECT o FROM Order o WHERE o.restaurant.id = :restaurantId AND o.status = 'PENDING'")
	List<Order> findPendingOrdersByRestaurantId(@Param("restaurantId") Integer restaurantId);

	
   @Query("SELECT o FROM Order o WHERE o.restaurant.id = :restaurantId AND o.status IN ('placed', 'accepted', 'delivered')")
 List<Order> findIncomingOrdersByRestaurantId(@Param("restaurantId") Integer restaurantId);
	
   
   @Modifying
   @Transactional
   @Query("UPDATE Order o SET o.status = :status WHERE o.id = :orderId")
   int updateOrderStatus(@Param("orderId") Integer orderId, @Param("status") String status);

   List<com.foodapp.model.Order> findByRestaurant_IdAndStatusIn(Integer restaurantId, List<String> of);
   
	
}
