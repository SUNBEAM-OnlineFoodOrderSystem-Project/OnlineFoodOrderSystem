package com.foodapp.controller.restaurant;

import com.foodapp.service.restaurant.OrderService;

public class RestOrderConstoller {

	
	
  @Autowired
    private final OrderService orderService;

    @GetMapping("/incoming")
    public ResponseEntity<List<IncomingOrderDTO>> getIncomingOrders(@RequestParam Long restaurantId) {
        List<IncomingOrderDTO> orders = orderService.getPendingOrdersForRestaurant(restaurantId);
        return ResponseEntity.ok(orders);
    }
	
	
	
}
